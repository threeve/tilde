[user]
	name = Jason Foreman
	email = jason@threeve.org
[github]
	user = threeve
[core]
	editor = vim
	excludesfile = ~/.gitignore-global
	quotepath = false
[credential]
	helper = osxkeychain
[apply]
	whitespace = fix
[color]
	branch = auto
	diff = auto
	pager = true
	status = auto
	ui = auto
[alias]
	b = branch
	br = branch
	ci = commit
	co = checkout
	d = diff --word-diff=color
	ff = pull --ff
	hub = !hub
        idiff = diff --cached
	lg = log --pretty=format:'%Cred%h%Creset - %s %Cgreen(%cr)%Creset %C(yellow)%d%Creset' --abbrev-commit --date=relative
	lgg = !git lg --graph
        mulch = "!_() { git remote prune origin && git branch --merged | grep -v '^*' | xargs -n 1 git branch -d; }; _"
	pdiff = difftool -t patdiff
	poop = stash pop
        pr = !gh pull-request
	st = status -sb
	sub = submodule
        subup = submodule update --init --recursive
	w = whatchanged
	whois = "!sh -c 'git log -i -1 --pretty=\"format:%an <%ae>\n\" --author=\"$1\"' -"
[push]
	default = simple
[diff]
	tool = patdiff
[difftool]
	prompt = false
[difftool "patdiff"]
	cmd = patdiff \"$LOCAL\" \"$REMOTE\" -alt-old a/\"$REMOTE\" -alt-new b/\"$REMOTE\" | cat

